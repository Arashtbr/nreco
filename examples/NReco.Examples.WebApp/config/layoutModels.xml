<?xml version="1.0" encoding="utf-8" ?>
<components xmlns:xi="http://www.w3.org/2003/XInclude">
	<entities>
		<xi:include href="dsm/entities.xml" xpointer="xpointer(/components/*)"/>
	</entities>
	<default>
		<services>
			<dalc name="db"/>
			<datasetfactory name="dsFactory"/>
		</services>
		<form>
			<buttons xmlns="urn:schemas-nreco:nreco:web:layout:v1" view="true" add="false" edit="false">
				<linkbutton caption="Edit" command="Edit" icon="ui-icon ui-icon-disk"/>
				<linkbutton caption="Delete" command="Delete" icon="ui-icon ui-icon-trash"/>
			</buttons>
			<buttons xmlns="urn:schemas-nreco:nreco:web:layout:v1" view="false" add="false" edit="true">
				<linkbutton caption="Save" command="Update" icon="ui-icon ui-icon-disk"/>
				<linkbutton caption="Cancel" command="Cancel" icon="ui-icon ui-icon-close"/>
			</buttons>
			<buttons xmlns="urn:schemas-nreco:nreco:web:layout:v1" view="false" add="true" edit="false">
				<linkbutton caption="Create" command="Insert" icon="ui-icon ui-icon-disk"/>
			</buttons>
		</form>
	</default>
	
	<xi:include href="dsm/layouts.xml" xpointer="xpointer(/components/*)"/>

