<components xmlns:xi="http://www.w3.org/2003/XInclude">
	<index name="main" xmlns="urn:schemas-nreco:nreco:lucene:v1">
		<location>lucene_index</location>
		<document name="page">
			<uid>'page_'+#this['id']</uid>
			<field name="title">#this['title']</field>
			<field name="content" store="false">#this['content']</field>
		</document>

		<indexers>
			<datarow sourcename="pages" dalc="db">
				<update document="page">
					
				</update>
			</datarow>
		</indexers>

	</index>

</components>