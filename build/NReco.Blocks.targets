<!--
Properties: NRecoRepoRootDirectory, NRecoTargetDirectory
-->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<ItemGroup>
		<WebappFiles Include="$(NRecoRepoRootDirectory)\shared\blocks\webapp\**" Exclude="$(NRecoRepoRootDirectory)\shared\blocks\webapp\**\.svn\**"/>
	</ItemGroup>	
	<ItemGroup>
		<CommonXslFiles Include="$(NRecoRepoRootDirectory)\shared\xsl\**" Exclude="$(NRecoRepoRootDirectory)\shared\xsl\**\.svn\**"/>
	</ItemGroup>	
	<Target Name="NRecoCopyWebappBlock">
		<Copy
            SourceFiles="@(WebappFiles)"
			SkipUnchangedFiles="true"
            DestinationFiles="@(WebappFiles->'$(NRecoTargetDirectory)\%(RecursiveDir)%(Filename)%(Extension)')"
        />
		<Copy
            SourceFiles="@(CommonXslFiles)"
			SkipUnchangedFiles="true"
            DestinationFiles="@(CommonXslFiles->'$(NRecoTargetDirectory)\config\xsl\%(RecursiveDir)%(Filename)%(Extension)')"
        />		
		
	</Target>
	
</Project>